<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff4eb"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/centerProfileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="9dp"
        android:src="@drawable/img2"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/centerNameText"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:text=" Center Name:"
            android:fontFamily="@font/text3"
            android:textStyle="bold"
            android:textColor="#130400"
            android:textSize="8pt" />
        <TextView
            android:id="@+id/centerAddressText"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:text="Center Address : "
            android:fontFamily="@font/text3"
            android:textStyle="bold"
            android:textColor="#130400"
            android:textSize="8pt" />
    </LinearLayout>
</LinearLayout>