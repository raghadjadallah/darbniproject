
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff5ec"
    tools:context=".manageCenter">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img1"
        android:layout_width="181dp"
        android:layout_height="236dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:src="@drawable/img2"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:translationX="20dp"
        android:id="@+id/cename"
        android:text="center name :"
        android:layout_marginTop="10dp"
        android:textColor="#130400"
        android:textSize="10pt"
        android:textStyle="bold"
        android:fontFamily="@font/text3" />
        <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:translationX="20dp"
        android:id="@+id/cephone"
        android:text="center phone :"
        android:layout_marginTop="15dp"
        android:textColor="#130400"
        android:textSize="10pt"
        android:textStyle="bold"
        android:fontFamily="@font/text3"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:layout_marginTop="25dp">
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#ff6827"
            android:text="Send an Alert"
            android:onClick="sendAlertForCenter"
            app:bootstrapBrand="secondary"
            app:bootstrapSize="xl"
            app:buttonMode="regular"
            app:roundedCorners="true"
            android:fontFamily="@font/mmm"
            android:textStyle="bold|italic"
            app:showOutline="false" />
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:textStyle="bold|italic"
            android:layout_marginTop="15dp"
            android:backgroundTint="#ff6827"
            android:text="Deactivate this Account"
            android:onClick="disactivateCenterAccount"
            app:bootstrapBrand="secondary"
            app:bootstrapSize="xl"
            app:buttonMode="regular"
            android:fontFamily="@font/mmm"
            app:roundedCorners="true"
            app:showOutline="false" />
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#ff6827"
            android:text="Delete this Account"
            android:onClick="deleteCenterAccount"
            android:textStyle="bold|italic"
            app:bootstrapBrand="secondary"
            app:bootstrapSize="xl"
            app:buttonMode="regular"
            android:fontFamily="@font/mmm"
            app:roundedCorners="true"
            app:showOutline="false" />
    </LinearLayout>
</LinearLayout>