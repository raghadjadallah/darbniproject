<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerAddCar"
    android:layout_height="match_parent"
    tools:context=".AddNewCar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include
            layout="@layout/main_tool_bar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff4eb">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/carprofile_image"
                        android:layout_marginTop="10dp"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/img8"
                        app:civ_border_width="2dp"
                        android:layout_gravity="center_horizontal"
                        app:civ_border_color="#FF000000"/>

                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/button4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="#ff6827"
                        android:text="Upload Image "
                        app:bootstrapBrand="secondary"
                        android:textSize="9pt"
                        android:onClick="ChangeCarImage"
                        android:fontFamily="@font/mmm"
                        android:layout_gravity="center"
                        android:layout_marginLeft="39dp"
                        app:bootstrapSize="xl"
                        app:buttonMode="regular"
                        app:roundedCorners="true"
                        app:showOutline="false"
                        android:textStyle="bold|italic"/>
                </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="18dp"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Manufactor :"
                       android:textSize="9pt"
                       android:textStyle="bold"
                       android:fontFamily="@font/text3"
                       android:textColor="#130400"
                       android:translationX="10dp"
                       android:translationY="20dp"/>
                   <com.beardedhen.androidbootstrap.BootstrapEditText
                       android:id="@+id/addcarmanufactor"
                       android:textColorHint="@color/black"
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       app:bootstrapSize="md"
                       app:bootstrapBrand="info"
                       android:layout_marginTop="20dp"
                       android:inputType="text"
                       android:textColor="#130400"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Name of model :"
                       android:textSize="9pt"
                       android:textStyle="bold"
                       android:fontFamily="@font/text3"
                       android:textColor="#130400"
                       android:translationX="10dp"
                       android:translationY="20dp"/>

                   <com.beardedhen.androidbootstrap.BootstrapEditText
                       android:id="@+id/addcarmodel"
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       app:bootstrapSize="md"
                       app:bootstrapBrand="info"
                       android:textColorHint="@color/black"
                       android:layout_marginTop="20dp"
                       android:inputType="text"
                       android:textColor="#130400"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Model :"
                       android:textSize="9pt"
                       android:textStyle="bold"
                       android:fontFamily="@font/text3"
                       android:textColor="#130400"
                       android:translationX="10dp"
                       android:translationY="20dp"/>
                   <com.beardedhen.androidbootstrap.BootstrapEditText
                       android:id="@+id/addcaryear"
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       app:bootstrapSize="md"
                       app:bootstrapBrand="info"
                       android:textColorHint="@color/black"
                       android:layout_marginTop="20dp"
                       android:inputType="text"
                       android:textColor="#130400"
                       />
               </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gear Box Type:-"
                        android:textColor="#130400"
                        android:layout_marginLeft="10dp"
                        android:textSize="10pt"
                        android:fontFamily="@font/text3"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center">
                    <CheckBox
                        android:id="@+id/man1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Automatic"
                        android:textColor="#130400"
                        android:textSize="8pt"
                        android:onClick="ToggleCheckBox"
                        android:fontFamily="@font/text3"
                        android:textStyle="bold"
                        />
                    <CheckBox
                        android:id="@+id/man2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manual"
                        android:textColor="#130400"
                        android:textSize="8pt"
                        android:onClick="ToggleCheckBox"
                        android:layout_marginLeft="80dp"
                        android:fontFamily="@font/text3"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="11dp"
                    android:backgroundTint="#ff6827"
                    android:fontFamily="@font/mmm"
                    android:text="FINSH "
                    android:onClick="registerNewCoach"
                    android:textSize="9pt"
                    android:textStyle="bold|italic"
                    app:bootstrapBrand="secondary"
                    app:bootstrapSize="xl"
                    app:buttonMode="regular"
                    app:roundedCorners="true"
                    app:showOutline="false" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_gravity="start"
        >
        <include
            layout="@layout/main_nav_drawer2"
            />
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>