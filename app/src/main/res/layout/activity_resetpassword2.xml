<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dg4"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".Resetpassword2">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/text3"
        android:gravity="center"
        android:text="Verification Code"
        android:textColor="#130400"
        android:textSize="11pt"
        android:textStyle="bold" />
    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:translationY="10dp"
        android:textColor="#130400"
        app:bootstrapBrand="info"
        android:id="@+id/codetext"
        app:bootstrapSize="md" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/text3"
        android:gravity="center"
        android:text="New Password"
        android:textColor="#130400"
        android:textSize="11pt"
        android:textStyle="bold" />
    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:translationY="10dp"
        app:bootstrapBrand="info"
        android:textColor="#130400"
        app:bootstrapSize="md"
        android:id="@+id/newpass"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/text3"
        android:gravity="center"
        android:text="Confirm Password"
        android:textColor="#130400"
        android:textSize="11pt"
        android:textStyle="bold" />
       <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
           android:translationY="10dp"
        app:bootstrapBrand="info"
           android:id="@+id/confirmpass"
        android:textColor="#130400"
        app:bootstrapSize="md" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#130400"
            android:fontFamily="@font/mmm"
            android:onClick="CancelReset"
            android:text="CANCEL"
            android:textColor="#130400"
            android:textStyle="bold|italic"
            app:bootstrapSize="xl"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#130400"
            android:fontFamily="@font/mmm"
            android:text="CONTINUE"
            android:onClick="ConfirmPassChange"
            android:textColor="#130400"
            android:textStyle="bold|italic"
            android:layout_marginLeft="95dp"
            app:bootstrapSize="xl"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false" />
    </LinearLayout>
</LinearLayout>