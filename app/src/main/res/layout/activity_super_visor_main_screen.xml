
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff5ec"
    tools:context=".SuperVisorMainScreen">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_marginTop="25dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/img1"
        app:civ_border_width="2dp"
        android:layout_gravity="center_horizontal"
        app:civ_border_color="#FF000000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="5dp"
        android:text="Darbni"
        android:textSize="25pt"
        android:gravity="center"
        android:textStyle="bold|normal"
        android:fontFamily="@font/mnmn"
        android:textColor="#130400"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        >
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#ff6827"
            android:text="Latest Observations and Complaints"
            android:layout_gravity="center_horizontal"
            app:bootstrapSize="xl"
            android:onClick="SeeLastReviews"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false"
            android:textSize="40pt"
            android:textStyle="bold|italic"
            app:bootstrapBrand="secondary"
            android:fontFamily="@font/mmm"
            tools:ignore="OnClick" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:backgroundTint="#ff6827"
            android:text="See Centers Information"
            android:textStyle="bold|italic"
            android:onClick="SeeCenterInfo"
            app:bootstrapSize="xl"
            android:textSize="40pt"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false"
            app:bootstrapBrand="secondary"
            android:fontFamily="@font/mmm"
            tools:ignore="OnClick" />
    </LinearLayout>
</LinearLayout>