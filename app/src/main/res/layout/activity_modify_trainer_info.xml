<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/modifyTrainerDrawer"
    android:layout_height="match_parent"
    tools:context=".ModifyTrainerInfo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include
            layout="@layout/main_tool_bar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/dg4"
            android:layout_marginTop="10dp"
            android:padding="10dp">
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:text="Modifying data "
                android:textSize="13pt"
                android:textStyle="bold"
                android:textColor="#130400"
                android:fontFamily="@font/text3"
                android:gravity="center"/>
            <TextView
                android:id="@+id/nametv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="10pt"
                android:textStyle="bold"
                android:textColor="#130400"
                android:fontFamily="@font/text3"
                />
            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:bootstrapSize="md"
                app:bootstrapBrand="info"
                android:layout_marginTop="15dp"
                android:inputType="text"
                android:textColor="#130400"
                android:id="@+id/txt_name"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="10pt"
                android:textStyle="bold"
                android:fontFamily="@font/text3"
                android:textColor="#130400"/>

            <com.beardedhen.androidbootstrap.BootstrapEditText

                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:bootstrapSize="md"
                app:bootstrapBrand="info"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:textColor="#130400"
                android:id="@+id/txt_phone"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email :"
                android:layout_marginTop="10dp"
                android:textSize="10pt"
                android:textStyle="bold"
                android:fontFamily="@font/text3"
                android:textColor="#130400"/>
            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:bootstrapSize="md"
                app:bootstrapBrand="info"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:id="@+id/txt_email"
                android:textColor="#130400"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="60dp">
                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="#130400"
                    android:text="CLEAR"
                    android:onClick="cancelModifyOperation"
                    app:bootstrapBrand="success"
                    android:fontFamily="@font/mmm"
                    android:textStyle="italic|bold"
                    app:bootstrapSize="xl"
                    app:buttonMode="regular"
                    app:roundedCorners="true"
                    android:translationX="20dp"
                    app:showOutline="false" />
                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#130400"
                    android:text="Continue"
                    android:onClick="modifyOperation"
                    app:bootstrapBrand="success"
                    android:fontFamily="@font/mmm"
                    android:layout_marginLeft="120dp"
                    app:bootstrapSize="xl"
                    android:textStyle="italic|bold"
                    app:buttonMode="regular"
                    app:roundedCorners="true"
                    app:showOutline="false" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_gravity="start"
        >
        <include
            layout="@layout/main_nav_drawer"
            />
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>